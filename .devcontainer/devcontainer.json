{
  "context": "../",
  "dockerFile": "Dockerfile",
  // Launch the container as a non-root user
  "remoteUser" : "ros",
  "runArgs": [
      // Use a ptrace-based debugger
      "--cap-add=SYS_PTRACE",
      "--security-opt", "seccomp=unconfined",
      // Use host network stack
      "--network", "host",
      // Allow GUI-based apps to run using host's X server
      "--env=\"DISPLAY\"",
      // Allow Zsh prompts to display correctly
      "--env", "TERM=xterm-256color"
  ],
  "extensions": [
      "ms-python.python",
      "ms-vscode.cpptools",
      "twxs.cmake",
      "ms-vscode.cmake-tools",
      "yzhang.markdown-all-in-one",
      "gruntfuggly.todo-tree",
      "eamodio.gitlens",
      "github.vscode-pull-request-github"
  ]
}
